//------------------------------------------------------------------------------
//  triangle.shd
//  Annotated GLSL shaders for Triangle sample.
//------------------------------------------------------------------------------
@vs vs
@in vec3 position
@in vec3 color0
@out vec4 color
    _position = vec4(position, 0);
    color = color0;
@end

@fs fs
@in vec3 color
    _color = vec4(color, 1);
@end

@program Triangle vs fs